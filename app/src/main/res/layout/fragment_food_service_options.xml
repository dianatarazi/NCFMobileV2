<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".FoodServiceOptions">

    <ImageView
        android:id="@+id/boars_btn"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:background="@android:color/black"
        android:paddingBottom="10dp"
        android:src="@drawable/boar_logo"
        app:layout_constraintBottom_toTopOf="@+id/metz_cafe_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/boars_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/boarshead_name"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/metz_cafe_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boars_btn"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:id="@+id/metz_cafe_btn"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:background="@android:color/white"
        android:paddingBottom="15dp"
        android:src="@drawable/metz_logo"
        app:layout_constraintBottom_toTopOf="@+id/fourwinds_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boars_btn" />

    <TextView
        android:id="@+id/metz_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/metz_cafe_name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fourwinds_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/metz_cafe_btn"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:id="@+id/fourwinds_btn"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:background="#f5e8db"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:src="@drawable/fourwinds_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metz_cafe_btn" />

    <TextView
        android:id="@+id/fourwinds_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/four_winds_name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fourwinds_btn"
        app:layout_constraintVertical_bias="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>